{
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "ScriptHost"],
    "declaration": true,
    "module": "ES2022",
    "target": "ES2020",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "bun-types"
    ]
  }
}
